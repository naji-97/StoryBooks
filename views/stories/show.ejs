<div class="row m-t-4">
    <div class="col s8 m8">
        <div class="card story">
            <div class="card-content">
                <h3> <%= story.title %> 
                </h3>
                <span class="card-title"><%= moment(story.createdAt).format( 'MMM-DD-YYYY') %> </span>
                <%- story.body %> 
            </div>
        </div>
    </div>
    <div class="col s12 m4 ">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title"><%=story.user.displayName %></span>
                <img src="<%=story.user.image%>" width="200px" class="circle responsive-img img-small">
            </div>
            
        </div>
    </div>
</div>